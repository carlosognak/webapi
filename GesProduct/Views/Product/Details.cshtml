@model GesProduct.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Détails du Produit</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            IdProduit:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdPro)
        </dd>
        <dt>
            Nom du Produit:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomPro)
        </dd>
        <dt>
            Description Prod:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DesPro)
        </dd>
        <dt>
            Image:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ImagePro)
        </dd>
        <dt>
            Catégorie du Produit:
        </dt>
        <dd>
            @Html.DisplayFor(model => Model.Category.Nomcat)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Modifier", "Edit/" + Model.IdPro, "Product") |
    <a asp-action="Index">Retour</a>|
    @Html.ActionLink("Supprimer", "Delete/" + Model.IdPro, "Product")
</div>
