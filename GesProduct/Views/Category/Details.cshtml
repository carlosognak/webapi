@model GesProduct.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Categorie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id Categorie
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdCat)
        </dd>
        <dt>
            No Categorie
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nomcat)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Modifier", "Edit/" + Model.IdCat, "Category")  |
