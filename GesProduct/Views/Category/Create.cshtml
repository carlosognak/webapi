@model GesProduct.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><b>Création des Catégories</b></h2>

<h4>Categorie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Nomcat" class="control-label">Nom de la Categorie</label>
                <input asp-for="Nomcat" class="form-control" />
                <span asp-validation-for="Nomcat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Valider" class="btn btn-success" />
                <a asp-controller="Category" asp-action="Index" style="margin-left:218px;" class="popup btn btn-info">Retour</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
