@model GesProduct.Models.LoginModel

@{
    ViewData["Title"] = "Index";
    @*Layout = null;*@
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}
@using Microsoft.AspNetCore.Http;



<h2>Connexion</h2>

<h4><b>Veuillez entrer vos paramètres de connexion</b></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <h4><i><b style="color:red;">@ViewBag.error</b></i></h4>
        <form asp-action="Index">
            <div>
                <fieldset style="border:1.5px solid; border-radius:30px; background-color:azure; text-align: left; padding-left: 35px; padding-right: 35px; height:250px; width:460px">
                    <legend style="background-color: #000; color: #fff; padding: 3px 3px; width:100px;">connexion</legend>
                    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                    <div class="form-group">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" name="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" name="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Connexion" class="btn btn-primary" />
                    </div>
                </fieldset>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
